<%- include('layout/header') %>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark" aria-label="Ninth navbar example">
        <div class="container-xl">
            <a href="/" class="navbar-brand"><i class="fa-solid fa-screwdriver-wrench"></i>RepairIT</a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarsExample07XL" aria-controls="navbarsExample07XL" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
    
          <div class="collapse navbar-collapse" id="navbarsExample07XL">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
              <li class="nav-item">
                <a class="nav-link" href="/"><i class="fa-regular fa-square-plus"></i>Add a Ticket</a>
              </li>
              <li class="nav-item">
                <a class="nav-link active" aria-current="page" href="/employee"><i class="fa-solid fa-magnifying-glass"></i>Find my Tickets</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/login"><i class="fa-sharp fa-solid fa-toolbox"></i>Admin Login</a>
              </li>
            </ul>
          </div>
        </div>
    </nav>
    <div class="container">
      <div class=" row">
          <div class="col-lg-12">
              <% if (message) { %>
              <div class="alert alert-dismissible fade show alert-<%= message.type %>" role="alert">
                  <button class="btn-close" type="button" data-bs-dismiss="alert" aria-label="Close"></button>
                  <strong><%= message.message %></strong>
              </div>
              <% } %>
              <div class="table-responsive my-3">
                  <% if (tickets != '') { %>
                      <table class="table table-stripped text-center my-3">
                          <thead>
                          <tr class="table-dark">
                              <th>Index</th>
                              <th>Employee ID</th>
                              <th>E-Mail</th>
                              <th>Office Room</th>
                              <th>Description</th>
                              <th>Image</th>
                              <th>Status</th>
                          </tr>
                          </thead>
                          <tbody>
                              <% tickets.forEach((row, index) => { %>
                                  <tr class="align-middle">
                                      <td><%= index %></td>
                                      <td><%= row.employee_id %></td>
                                      <td><%= row.email %></td>
                                      <td><%= row.office_room %></td>
                                      <td><%= row.description %></td>
                                      <td><img id="img" src="<%= row.image %>" width="80" class="img-thumbnail" /></td>
                                      <td><%= row.status %></td>
                                  </tr>                            
                              <% }) %> 
                          </tbody>
                      </table>
                  <% } else { %>
                      <h1 class="text-center text-secondary mt-5">You have no tickets in the database!</h1>
                  <% } %>
              </div>
          </div>
      </div>
  </div>
  <div class="container">
    <div class="row">
        <div class="col-lg-6 mx-auto mt-4">
            <div class="card text-white bg-dark mb-3">
                <div class="card-header">
                    <h3 class="text-light">Login</h3>
                </div>
                <div class="card-body">
                    <form action="/login" method="post" id="login-form" enctype="multipart/form-data">
                        <div class="mb-3">
                        <label for="email">Email</label>
                        <input type="email" name="email" class="form-control form-control-lg"
                        placeholder="Enter email" required />
                        </div>
                        <div class="mb-3">
                        <label for="password">Password</label>
                        <input type="password" name="password" class="form-control form-control-lg"
                        placeholder="Enter password" required />
                        </div>
                        <div class="mb-3 d-grid">
                        <input type="submit" name="submit" value="Login" class="btn btn-primary btn-lg">
                        </div>      
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<%- include('layout/footer') %>
<%- include('layout/header') %>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark" aria-label="Ninth navbar example">
        <div class="container-xl">
            <a href="/admin_tickets" class="navbar-brand"><i class="fa-solid fa-screwdriver-wrench"></i>RepairIT</a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarsExample07XL" aria-controls="navbarsExample07XL" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
    
          <div class="collapse navbar-collapse" id="navbarsExample07XL">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
              <li class="nav-item">
                <a class="nav-link active" aria-current="page" href="/admin_tickets"><i class="fa-sharp fa-solid fa-toolbox"></i>Admin Tickets</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/"><i class="fa-solid fa-right-to-bracket"></i>Logout</a>
              </li>
            </ul>
          </div>
        </div>
    </nav>
    <div class="container">
        <div class=" row">
            <div class="col-lg-12">
                <% if (message) { %>
                <div class="alert alert-dismissible fade show alert-<%= message.type %>" role="alert">
                    <button class="btn-close" type="button" data-bs-dismiss="alert" aria-label="Close"></button>
                    <strong><%= message.message %></strong>
                </div>
                <% } %>
                <div class="table-responsive my-3">
                    <% if (tickets != '') { %>
                        <table class="table table-stripped text-center my-3">
                            <thead>
                            <tr class="table-dark">
                                <th>Index</th>
                                <th>Employee ID</th>
                                <th>E-Mail</th>
                                <th>Office Room</th>
                                <th>Description</th>
                                <th>Image</th>
                                <th>Status</th>
                                <th>Action</th>
                            </tr>
                            </thead>
                            <tbody>
                                <% tickets.forEach((row, index) => { %>
                                    <tr class="align-middle">
                                        <td><%= index %></td>
                                        <td><%= row.employee_id %></td>
                                        <td><%= row.email %></td>
                                        <td><%= row.office_room %></td>
                                        <td><%= row.description %></td>
                                        <td><img id="img" src="<%= row.image %>" width="80" class="img-thumbnail" /></td>
                                        <td><%= row.status %></td>
                                        <td>
                                        <a href="/edit/<%= row._id %>" class="text-danger"><i class="fa-solid fa-pen-to-square"></i></a>
                                        <a href="/conclude/<%= row._id %>" class="text-success"><i class="fa-sharp fa-solid fa-square-check"></i></a>
                                        <a href="/delete/<%= row._id %>" class="text-danger"><i class="fa-solid fa-trash"></i></a>
                                        </td>
                                    </tr>                            
                                <% }) %> 
                            </tbody>
                        </table>
                    <% } else { %>
                        <h1 class="text-center text-secondary mt-5">No tickets found in the database!</h1>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
    <div id="myModal" class="modal">
        <span class="modal-close">&times;</span>
        <img class="modal-content" id="img01">
    </div>

<%- include('layout/footer') %>

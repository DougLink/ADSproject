<%- include('layout/header') %>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark" aria-label="Ninth navbar example">
        <div class="container-xl">
            <a href="/" class="navbar-brand"><i class="fa-solid fa-screwdriver-wrench"></i>RepairIT</a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarsExample07XL" aria-controls="navbarsExample07XL" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
    
          <div class="collapse navbar-collapse" id="navbarsExample07XL">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                  <li class="nav-item">
                    <a class="nav-link active" aria-current="page" href="/"><i class="fa-regular fa-square-plus"></i>Add a Ticket</a>
                  </li>
                  <li class="nav-item">
                    <a class="nav-link" href="/employee"><i class="fa-solid fa-magnifying-glass"></i>Find my Tickets</a>
                  </li>
                  <li class="nav-item">
                    <a class="nav-link" href="/login"><i class="fa-sharp fa-solid fa-toolbox"></i>Admin Login</a>
                  </li>
            </ul>
          </div>
        </div>
    </nav>
    <div class="container">
        <% if (message) { %>
            <div class="alert alert-dismissible fade show alert-<%= message.type %>" role="alert">
                <button class="btn-close" type="button" data-bs-dismiss="alert" aria-label="Close"></button>
                <strong><%= message.message %></strong>
            </div>
        <% } %>
        <div class="row">
            <div class="col-lg-6 mx-auto mt-4">
                <div class="card text-white bg-dark mb-3">
                    <div class="card-header">
                        <h3 class="text-light">Add New Ticket</h3>
                    </div>
                    <div class="card-body">
                        <form action="/add" method="post" id="add-form" enctype="multipart/form-data">
                            <div class="mb-3">
                            <label for="employee_id">Employee ID</label>
                            <input type="id" name="employee_id" class="form-control form-control-lg" placeholder="Enter Employee ID" required />
                            </div>
                            <div class="mb-3">
                            <label for="email">Email</label>
                            <input type="email" name="email" class="form-control form-control-lg"
                            placeholder="Enter email" required />
                            </div>
                            <div class="mb-3">
                            <label for="office_room">Office Room</label>
                            <input type="name" name="office_room" class="form-control form-control-lg"
                            placeholder="Enter office room" required />
                            </div>
                            <div class="mb-3">
                            <label for="description">Description</label>
                            <input type="description" name="description" class="form-control form-control-lg"
                            placeholder="Enter description" required />
                            </div>
                            <div class="mb-3">
                            <label for="image" class="form-label">Select Image</label>
                            <input class="form-control form-control-lg" type="file" name="image" required />
                            </div>
                            <div class="mb-3 d-grid">
                            <input type="submit" name="submit" value="Add Ticket" class="btn btn-primary btn-lg">
                            </div>      
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

<%- include('layout/footer') %>
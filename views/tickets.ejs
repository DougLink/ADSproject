<%- include('layout/header') %>
<%- include('layout/navbar') %>
<body>
    <div class="container">
        <div class=" row">
            <div class="col-lg-12">
                <% if (message) { %>
                <div class="alert alert-dismissible fade show alert-<%= message.type %>" role="alert">
                    <button class="btn-close" type="button" data-bs-dismiss="alert" aria-label="Close"></button>
                    <strong><%= message.message %></strong>
                </div>
                <% } %>
                <div class="table-responsive my-3">
                    <% if (tickets != '') { %>
                        <table class="table table-stripped text-center my-3">
                            <thead>
                            <tr class="table-dark">
                                <th>Index</th>
                                <th>Employee ID</th>
                                <th>E-Mail</th>
                                <th>Office Room</th>
                                <th>Description</th>
                                <th>Image</th>
                                <th>Status</th>
                            </tr>
                            </thead>
                            <tbody>
                                <% tickets.forEach((row, index) => { %>
                                    <tr class="align-middle">
                                        <td><%= index %></td>
                                        <td><%= row.employee_id %></td>
                                        <td><%= row.email %></td>
                                        <td><%= row.office_room %></td>
                                        <td><%= row.description %></td>
                                        <td><img id="img" src="<%= row.image %>" width="80" class="img-thumbnail" /></td>
                                        <td><%= row.status %></td>
                                    </tr>                            
                                <% }) %> 
                            </tbody>
                        </table>
                    <% } else { %>
                        <h1 class="text-center text-secondary mt-5">You have no tickets in the database!</h1>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
    <div id="myModal" class="modal">
        <span class="modal-close">&times;</span>
        <img class="modal-content" id="img01">
    </div>
</body>
<%- include('layout/scripts') %>
